@model IEnumerable<Inventory.Models.Tenant>

@{
    ViewData["Title"] = "آزمایشگاه ها";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">آزمایشگاه‌ها</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> ایجاد آزمایشگاه جدید</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm" style="background-color: #f8f9fa;">
            <thead class="bg-light text-dark">
                <tr>
                    <th>آیدی آزمایشگاه</th>
                    <th>نام</th>
                    <th>انبار</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tenant in Model)
                {
                    <tr>
                        <td>@tenant.TenantId</td>
                        <td>@tenant.Name</td>
                        <td>@tenant.Warehouse?.Name</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@tenant.TenantId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> ویرایش
                                </a>
                                <a asp-action="Delete" asp-route-id="@tenant.TenantId" class="btn btn-danger btn-sm" onclick="return confirm('آیا از حذف این آزمایشگاه مطمئن هستید؟');">
                                    <i class="fas fa-trash-alt"></i> حذف
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
