@model Inventory.Models.Tenant

@{
    ViewData["Title"] = "ایجاد آزمايشگاه جدید";
}

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="mb-0">ایجاد آزمايشگاه جدید</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-2">
                    <label asp-for="Name" class="form-label">نام</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="WarehouseId" class="form-label">انبار آزمایشگاه</label>
                    <select asp-for="WarehouseId" class="form-control" asp-items="@(new SelectList(ViewBag.Warehouses, "WarehouseId", "Name"))">
                        <option value="">-- انتخاب انبار --</option>
                    </select>
                    <span asp-validation-for="WarehouseId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary btn-sm">بازگشت</a>
                    <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-save"></i> ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>
