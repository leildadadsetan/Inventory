@model Inventory.Models.Tenant
@{
    ViewData["Title"] = "ایجاد انبار جدید";
}

<h2>ایجاد کاربر جدید</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WarehouseId" class="control-label"></label>
        <select asp-for="WarehouseId" class="form-control" asp-items="@(new SelectList(ViewBag.Warehouses, "WarehouseId", "Name"))">
            <option value="">-- انتخاب انبار --</option>
        </select>
        <span asp-validation-for="WarehouseId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">ثبت‌نام</button>
    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
</form>