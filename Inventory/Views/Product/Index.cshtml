@model IEnumerable<Inventory.Dtos.ProductDto>

@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">لیست محصولات</h2>
        <a href="@Url.Action("Create")" class="btn btn-success"><i class="fas fa-plus"></i> افزودن محصول جدید</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm bg-white">
            <thead class="bg-light text-dark">
                <tr>
                    <th>شناسه</th>
                    <th>نام محصول</th>
                    <th>کد محصول</th>
                    <th>کد گروه</th>
                    <th>کد زیرگروه</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.SubGroupCode- @item.ProductCode</td>
                        <td>@item.GroupCode - @item.GroupName</td>
                        <td>@item.SubGroupCode - @item.SubGroupName</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> ویرایش
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-danger btn-sm" onclick="return confirm('آیا از حذف این محصول مطمئن هستید؟');">
                                    <i class="fas fa-trash-alt"></i> حذف
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
