@model IEnumerable<Inventory.Models.Product>

@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="container mt-4">
    <h2 class="mb-4">لیست محصولات</h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">افزودن محصول جدید</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>شناسه</th>
                <th>نام محصول</th>
                <th>کد گروه</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.SubGroupId</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-warning btn-sm">ویرایش</a>
                        <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
