@model IEnumerable<Inventory.Models.ApplicationUser> // جایگزین کنید با فضای نام واقعی شما

@{
    ViewData["Title"] = "تخصیص نقش به کاربران";
}

<h2>تخصیص نقش به کاربران</h2>

<table class="table">
    <thead>
        <tr>
            <th>نام کاربر</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    <a asp-action="AssignRole" asp-route-userId="@user.Id" class="btn btn-info">تخصیص نقش</a>
                </td>
            </tr>
        }
    </tbody>
</table>