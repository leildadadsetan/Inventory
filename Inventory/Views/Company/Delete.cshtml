@model Inventory.Dtos.CompanyDto

@{
    ViewData["Title"] = "حذف شرکت";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">حذف شرکت</h5>
        </div>
        <div class="card-body">
            <h5 class="text-danger">آیا مطمئن هستید که می‌خواهید این شرکت را حذف کنید؟</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">نام شرکت:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">کد شرکت:</dt>
                <dd class="col-sm-9">@Model.CompanyCode</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CompanyId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">لغو</a>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> حذف</button>
                </div>
            </form>
        </div>
    </div>
</div>
