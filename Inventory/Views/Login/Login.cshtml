@model Inventory.ViewModels.LoginViewModel

<div class="container mt-4">
    <h2 class="text-primary text-center">ورود به سیستم</h2>

    <div class="card shadow-sm mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">نام کاربری</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">رمز عبور</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">مرا به خاطر داشته باش</label>
                </div>
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <button type="submit" class="btn btn-primary w-100">ورود</button>
            </form>
            <div class="mt-2 text-center">
                <span asp-validation-summary="ModelOnly" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
