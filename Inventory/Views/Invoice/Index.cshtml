@model IEnumerable<Inventory.Models.Invoice>

@{
    ViewData["Title"] = "لیست فاکتورها";
}

<h1>لیست فاکتورها</h1>

<table class="table">
    <thead>
        <tr>
            <th>شماره فاکتور</th>
            <th>تأمین‌کننده</th>
            <th>کاربر</th>
            <th>تاریخ فاکتور</th>
            <th>تاریخ دریافت</th>
            <th>وضعیت</th>
            <th>مجموع مبلغ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.SupplierId</td> <!-- اینجا می‌توانید نام تأمین‌کننده را نمایش دهید -->
                <td>@invoice.UserId</td> <!-- اینجا می‌توانید نام کاربر را نمایش دهید -->
                <td>@invoice.InvoiceDate.ToShortDateString()</td>
                <td>@(invoice.ReceivedDate.HasValue ? invoice.ReceivedDate.Value.ToShortDateString() : "ندارد")</td>
                <td>@invoice.Status</td>
                <td>@invoice.TotalAmount.ToString("C")</td> <!-- نمایش مبلغ به صورت فرمت ارزی -->
            </tr>
        }
    </tbody>
</table>