@model Inventory.Models.Warehouse

@{
    ViewData["Title"] = "Edit Warehouse";
}

<div class="container mt-4">
    <h2>Edit Warehouse</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="WarehouseId" />

        <div class="mb-3">
            <label class="form-label">Warehouse Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Location" class="form-control" required />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Tenant</label>
            <select asp-for="TenantId" class="form-control" asp-items="@(new SelectList(ViewData["Tenants"] as IEnumerable<Inventory.Models.Tenant>, "TenantId", "Name"))">
                <option value="">No Tenant</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
