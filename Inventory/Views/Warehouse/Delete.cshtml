@model Inventory.Models.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h1>Delete Warehouse</h1>

<div>
    <h4>Warehouse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name) <!-- Assuming you have a Name property -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location) <!-- Assuming you have a Location property -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <!-- Add other properties as needed -->
    </dl>

    <h4>Are you sure you want to delete this warehouse?</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.WarehouseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>