@model Inventory.Models.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h1>پاک کردن انبار</h1>

<div>
    <h4>انبار</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام انبار:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            مکان انبار:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>

    <h4>آیا مطمئن هستید که می‌خواهید این انبار را حذف کنید؟</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.WarehouseId" />
        <button type="submit" class="btn btn-danger">حذف</button>
        <a asp-action="Index" class="btn btn-secondary">انصراف</a>
    </form>
</div>