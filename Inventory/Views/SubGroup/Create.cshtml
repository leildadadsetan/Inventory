@model Inventory.Dtos.SubGroupCreateDto

@{
    ViewData["Title"] = "ایجاد زیرگروه";
}

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="mb-0">ایجاد زیرگروه</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-2">
                    <label asp-for="SubGroupName" class="form-label">نام زیرگروه</label>
                    <input asp-for="SubGroupName" class="form-control" />
                    <span asp-validation-for="SubGroupName" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="SubGroupCode" class="form-label">کد زیرگروه</label>
                    <input asp-for="SubGroupCode" class="form-control" />
                    <span asp-validation-for="SubGroupCode" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="GroupId" class="form-label">گروه</label>
                    <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups"></select>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary btn-sm">بازگشت</a>
                    <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-save"></i> ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>
