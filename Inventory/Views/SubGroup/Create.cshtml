@model Inventory.Dtos.SubGroupCreateDto

@{
    ViewData["Title"] = "ایجاد زیرگروه";
}

<div class="container mt-4">
    <h2>ایجاد زیرگروه</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="SubGroupName" class="control-label"></label>
            <input asp-for="SubGroupName" class="form-control" />
            <span asp-validation-for="SubGroupName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SubGroupCode" class="control-label"></label>
            <input asp-for="SubGroupCode" class="form-control" />
            <span asp-validation-for="SubGroupCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GroupId" class="control-label"></label>
            <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups" id="groupSelect"></select>
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">ایجاد</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#groupSelect').change(function () {
                var groupId = $(this).val();
                if (groupId) {
                    $.getJSON('@Url.Action("GetTenantId", "SubGroup")', { groupId: groupId }, function (data) {
                        $('#tenantIdInput').val(data.tenantId);
                    });
                } else {
                    $('#tenantIdInput').val('');
                }
            });
        });
    </script>
}