@model IEnumerable<Inventory.Dtos.SubGroupDto>

@{
    ViewData["Title"] = "لیست زیرگروه‌ها";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">زیرگروه‌ها</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> ایجاد زیرگروه جدید</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm" style="background-color: #f8f9fa;">
            <thead class="bg-light text-dark">
                <tr>
                    <th>شناسه زیرگروه</th>
                    <th>نام زیرگروه</th>
                    <th>شناسه گروه</th>
                    <th>نام گروه</th>
                    <th>شناسه آزمایشگاه</th>
                    <th>نام آزمایشگاه</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subGroup in Model)
                {
                    <tr>
                        <td>@subGroup.SubGroupId</td>
                        <td>@subGroup.SubGroupName</td>
                        <td>@subGroup.GroupId</td>
                        <td>@subGroup.GroupName</td>
                        <td>@subGroup.TenantId</td>
                        <td>@subGroup.TenantName</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@subGroup.SubGroupId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> ویرایش
                                </a>
                                <a asp-action="Delete" asp-route-id="@subGroup.SubGroupId" class="btn btn-danger btn-sm" onclick="return confirm('آیا از حذف این زیرگروه مطمئن هستید؟');">
                                    <i class="fas fa-trash-alt"></i> حذف
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
