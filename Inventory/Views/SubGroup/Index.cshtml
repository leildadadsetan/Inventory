@model IEnumerable<Inventory.Dtos.SubGroupDto>

@{
    ViewData["Title"] = "لیست زیرگروه‌ها";
}

<div class="container mt-4">
    <h2>زیرگروه‌ها</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">ایجاد زیرگروه جدید</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>شناسه زیرگروه</th>
                <th>نام زیرگروه</th>
                <th>شناسه گروه</th>
                <th>نام گروه</th> <!-- ستون نام گروه -->
                <th>شناسه Tenant</th>
                <th>نام Tenant</th> <!-- ستون نام Tenant -->
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subGroup in Model)
            {
                <tr>
                    <td>@subGroup.SubGroupId</td>
                    <td>@subGroup.SubGroupName</td>
                    <td>@subGroup.GroupId</td>
                    <td>@subGroup.GroupName</td> <!-- نمایش نام گروه -->
                    <td>@subGroup.TenantId</td>
                    <td>@subGroup.TenantName</td> <!-- نمایش نام Tenant -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@subGroup.SubGroupId" class="btn btn-warning">ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@subGroup.SubGroupId" class="btn btn-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>