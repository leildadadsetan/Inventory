@model Inventory.Dtos.SubGroupDto

@{
    ViewData["Title"] = "حذف زیرگروه";
}

<h2>حذف زیرگروه</h2>

<div>
    <h4>زیرگروه: @Model.SubGroupName</h4>
    <hr />
    <p>آیا مطمئن هستید که می‌خواهید زیرگروه <strong>@Model.SubGroupName</strong> را حذف کنید؟</p>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SubGroupId" />
        <button type="submit" class="btn btn-danger">حذف</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>