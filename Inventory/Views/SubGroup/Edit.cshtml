@model Inventory.Dtos.SubGroupEditDto

@{
    ViewData["Title"] = "ویرایش زیرگروه";
}

<div class="container mt-4">
    <h2>ویرایش زیرگروه</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="SubGroupId" />

        <div class="form-group">
            <label asp-for="SubGroupName" class="control-label">نام زیرگروه</label>
            <input asp-for="SubGroupName" class="form-control" />
            <span asp-validation-for="SubGroupName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SubGroupCode" class="control-label">کد زیرگروه</label>
            <input asp-for="SubGroupCode" class="form-control" />
            <span asp-validation-for="SubGroupCode" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="GroupId" />  
        <input type="hidden" asp-for="TenantId" />  

        <button type="submit" class="btn btn-primary">به‌روزرسانی</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>